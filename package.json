{
  "name": "sanity-nextjs-starter",
  "description": "Next.js + Sanity starter template with i18n, PageBuilder, and custom components",
  "keywords": [
    "Sanity",
    "Next.js",
    "Headless CMS",
    "i18n",
    "next-intl",
    "PageBuilder",
    "Visual Editing",
    "TypeScript"
  ],
  "homepage": "https://github.com/barr-digital/sanity-nextjs-starter#readme",
  "bugs": {
    "url": "https://github.com/barr-digital/sanity-nextjs-starter/issues"
  },
  "workspaces": [
    "studio",
    "frontend"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel --print-label dev:*",
    "dev:next": "npm run dev --workspace=frontend",
    "dev:studio": "npm run dev --workspace=studio",
    "format": "prettier --cache --write .",
    "lint": "npm run lint --workspace=frontend",
    "type-check": "npm run type-check --workspaces"
  },
  "prettier": "@sanity/prettier-config",
  "devDependencies": {
    "@sanity/prettier-config": "^2.0.2",
    "npm-run-all2": "^5.0.2",
    "prettier": "^3.7.3"
  }
}
